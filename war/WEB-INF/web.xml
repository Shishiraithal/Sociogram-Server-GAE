  </servlet>
 
  <servlet-mapping>
    <servlet-name>MediaTrashController</servlet-name>
    <url-pattern>/remove</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PopularPhotosController</servlet-name>
    <servlet-class>com.sociogram.server.controllers.PopularPhotosController</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>PopularPhotosController</servlet-name>
    <url-pattern>/popular_photos</url-pattern>
  </servlet-mapping>

  
</web-app>