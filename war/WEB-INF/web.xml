    <servlet-class>com.sociogram.server.controllers.MediaDownloadController</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>MediaDownloadController</servlet-name>
    <url-pattern>/serve</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LikesController</servlet-name>
    <servlet-class>com.sociogram.server.controllers.LikesController</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>LikesController</servlet-name>
    <url-pattern>/like</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>CommentsController</servlet-name>
    <servlet-class>com.sociogram.server.controllers.CommentsController</servlet-class>
  </servlet>
 
  <servlet-mapping>
